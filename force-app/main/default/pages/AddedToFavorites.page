<apex:page showHeader="false" standardStyleSheets="false" controller="UnsplashPjk">
	<style>
		body {
			padding: 0;
			margin: 0;
			min-height: 100vh;
			font-family: 'Fira Sans', sans-serif;
			background: #333;
		}

		header {
			display: flex;
			align-items: center;
			justify-content: space-between;
			background: #000;
			color: #fff;
			padding: 10px;
			height: 50px;
		}

		.headerContainer:after {
			content: '';
			display: block;
			position: relative;
			width: 100%;
			height: 3px;
			background: linear-gradient(to right, orange, yellow, green, cyan, blue, violet);
		}

		.headerProfileArea {
			display: grid;
			grid-template-columns: 1fr 1fr;
			align-items: center;
		}

		.headerProfileArea .userInfo {
			text-align: right;
		}

		.headerProfileArea .profilePic {
			text-align: center;
		}

		.headerProfileArea p {
			margin: 3px 0;
		}

		.beforeUsername {
			font-size: 12px;
			color: #aaa;
		}

		.username {
			font-weight: 500;
			text-transform: capitalize;
		}

		.logo {
			text-transform: uppercase;
			font-weight: 700;
		}

		.imageGrid {
			width: 100%;
			padding: 5px;
		}

		.imageGrid tbody {
			display: grid;
			grid-template-columns: repeat( auto-fit, minmax(300px, 1fr));
		}

		.imageGrid tbody tr {
			background: #222;
			color: #fff;
			margin: 5px;
			border-radius: 3px;
			box-shadow: 0 3px 5px rgba(0, 0, 0, .3);
			transition: .3s;
		}

		.imageGrid tbody tr:hover {
			box-shadow: 0 3px 10px rgba(0, 0, 0, .7);
			transition: .3s;
			cursor: pointer;
		}

		.imageGrid tbody tr:first-child {
			grid-column: 1 / span 2;
		}

		.imageGrid tbody tr td {
			display: block;
		}

		.imageData {
			padding: 10px;
			margin: 5px;
		}

		.imageData p {
			margin: 5px;
		}

		.unsplashImage {
			background: #999;
			padding: 0;
			margin: 0;
			width: 100%;
			height: 250px;
		}

		.imageTitle {
			font-size: 16px;
			font-weight: 600;
		}

		.profilePic img {
			height: 50px;
			border-radius: 100px;
		}

		.loginBtn {
			text-decoration: none;
			color: #999;
			transition: .2s;
		}

		.loginBtn:hover {
			color: #fff;
			transition: .2s;
		}

		.imageGrid img {
			height: 400px;
			width: 100%;
			object-fit: cover;
			border-top-left-radius: 3px;
			border-top-right-radius: 3px;
		}

		.imageData i {
			margin: 0 5px;
			color: #999;
		}
	</style>

	<head>
		<title>Added to favorites</title>
	</head>
	<apex:stylesheet value="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@200;300;400;500;600;700;800;900&display=swap"
	/>

	<body>
		<p>Hiiiii :)</p>
	</body>
</apex:page>